{
  "kind": "collectionType",
  "collectionName": "icon_lists",
  "info": {
    "singularName": "icon-list",
    "pluralName": "icon-lists",
    "displayName": "Section.Icon List"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "icons_orientation": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "enumeration",
      "enum": [
        "Portrait",
        "Landscape"
      ],
      "required": true
    },
    "bg_color": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "required": false,
      "customField": "plugin::color-picker.color"
    },
    "icons": {
      "type": "component",
      "repeatable": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "component": "component.icon",
      "required": true,
      "min": 1
    },
    "header": {
      "type": "component",
      "repeatable": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "component": "component.section-header"
    }
  }
}
